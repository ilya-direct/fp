       <field name="rightColumnWidth" type="text" default="190" label="TPL_A4JOOMLA-GALAXY-FREE_FIELD_RIGHTCOLUMNWIDTH_LABEL" description="TPL_A4JOOMLA-GALAXY-FREE_FIELD_RIGHTCOLUMNWIDTH_DESC" />
