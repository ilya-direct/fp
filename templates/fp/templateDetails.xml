       <field name="logoText" type="text" default="GALAXY" label="TPL_A4JOOMLA-GALAXY-FREE_FIELD_LOGOTEXT_LABEL" description="TPL_A4JOOMLA-GALAXY-FREE_FIELD_LOGOTEXT_DESC" />
